<script type="text/javascript" src="../../js/jquery-3.2.1.min.js"></script>
<script type="text/javascript" src="../../js/zingchart.min.js"></script>
<script type="text/javascript" src="/controllers/clickController.client.js"></script>
<script type="text/javascript" src="../../js/scripts.js"></script>



<h2 class="page-header">Poll: <b><i>{{poll.title}}</i></b> created by {{poll.creator}}</h2>

<div id="poll-chart"></div>

{{#each poll.choices}}
  <button class="btn-primary vote-button" value="?creator={{@root.poll.creator}}&poll={{@root.poll.title}}&vote={{@index}}&user={{@root.user.name}}">{{this.name}} = {{this.votes}} votes</button>
{{/each}}



